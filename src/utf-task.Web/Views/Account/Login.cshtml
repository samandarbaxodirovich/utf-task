@using utf_task.Service.Dtos.AdminDto;
@model AdminLoginDto
@{
    Layout = "_AccountLayout.cshtml";
}

<div class="wrppr">
    <h2 class="text-uppercase text-center mb-4">Sign In</h2>
    <form asp-controller="Account" asp-action="login" method="post">

        <div class="form-outline">
            <label class="form-label fw-bold" for="form3Example3cg">Login</label>
            <input asp-for="Login" class="form-control form-control-md" placeholder="Login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-outline">
            <label class="form-label fw-bold" for="form3Example4cg">Password</label>
            <input type="password" asp-for="Password" class="form-control form-control-md" placeholder="Password" />
            <span asp-validation-for="Password"  class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input type="submit" class="btn btn-success" style="width:100%;" value="Gooo" />
        </div>

    </form>
</div>